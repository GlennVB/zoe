<h4 class="page-title">User Config</h4>
<div class="block-area" id="horizontal">
	<h3 class="block-title">Edit Profile</h3>
	<%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
		<%= f.label :username, "User Name",:class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :username, :class => "form-control m-b-10", :placeholder => "username" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :email, :class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :email, :class => "form-control m-b-10" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :full_name, "Full Name",:class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :full_name, :class => "form-control m-b-10", :placeholder => "Full Name" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :profile, "Profile (HTML Enabled)",:class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_area :profile, :class => "form-control auto-size m-b-10", :style => "overflow: hidden; word-wrap: break-word; resize: none;", :placeholder => "" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :theme_preference, :class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= select_tag("user[theme_preference]", options_for_select([ "skin-blur-violate","skin-blur-blue","skin-blur-chrome","skin-blur-city","skin-blur-greenish","skin-blur-kiwi","skin-blur-lights","skin-blur-night","skin-blur-ocean","skin-blur-sunny","skin-blur-sunset","skin-blur-yellow","skin-cloth","skin-tectile" ], @user.theme_preference), {:class => "form-control"}) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<%= f.submit "Submit",:class => "btn btn-info btn-sm m-t-10" %>
		</div>
	</div>

	<% end %>
</div>