<%= form_for(@api_key, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @api_key.errors.any? %>
    <div id="error_explanation">
      <h3 class="block-title"><%= pluralize(@api_key.errors.count, "error") %> prohibited this api_key from being saved:</h3>

      <% @api_key.errors.full_messages.each do |message| %>
        <div class="alert alert-info"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :alias,:class => "col-md-2 control-label" %>
    <div class="col-md-10">
    <%= f.text_field :alias, :class => "form-control m-b-10", :placeholder => "alias" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :key,:class => "col-md-2 control-label" %>
    <div class="col-md-10">
    <%= f.text_field :key, :class => "form-control m-b-10", :placeholder => "key" %>
    </div>
  </div>
	<div class="form-group">
		<%= f.label :status, :class => "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= select_tag("api_key[status]", options_for_select([ "Open", "Revoked" ], @api_key.status), {:class => "form-control"}) %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<%= f.submit "Submit",:class => "btn btn-info btn-sm m-t-10" %>
		</div>
	</div>
<% end %>