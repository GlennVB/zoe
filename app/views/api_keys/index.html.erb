<h4 class="page-title">Api Keys</h4>
<div class="block-area" id="defaultStyle">
	<h3 class="block-title">Api Keys index</h3>
<div class="table-responsive overflow" style="overflow: hidden; outline: none;">
	<table class="table table-bordered table-hover tile">
	  <thead>
	    <tr>
		      <th>Alias</th>
		      <th>Key</th>
		      <th>Status</th>
		      <th class="text-right col-md-2"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @api_keys.each do |api_key| %>
	      <tr>
		        <td><%= api_key.alias %></td>
		        <td><%= api_key.key %></td>
		        <td><%= api_key.status %></td>
		        <td class="text-right col-md-2"><%= link_to api_key, :class => "btn m-r-5" do %><i class="fa fa-eye fa-fw"></i><% end %>
	        <%= link_to edit_api_key_path(api_key), :class => "btn m-r-5" do %><i class="fa fa-pencil fa-fw"></i><% end %>
	        <%= link_to api_key, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn m-r-5" do %><i class="fa fa-trash-o fa-fw"></i><% end %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Api key', new_api_key_path, :class => "btn" %>
</div>