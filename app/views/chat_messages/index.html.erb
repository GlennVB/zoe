<h4 class="page-title">Chat Messages</h4>
<div class="block-area" id="defaultStyle">
	<h3 class="block-title">Chat Messages index</h3>
<div class="table-responsive overflow" style="overflow: hidden; outline: none;">
	<table class="table table-bordered table-hover tile">
	  <thead>
	    <tr>
		      <th>Body</th>
		      <th>User</th>
		      <th class="text-right col-md-2"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @chat_messages.each do |chat_message| %>
	      <tr>
		        <td><%= chat_message.body %></td>
		        <td><%= User.find(chat_message.user_id).to_s %></td>
		        <td class="text-right col-md-2"><%= link_to chat_message, :class => "btn m-r-5" do %><i class="fa fa-eye fa-fw"></i><% end %>
	        <%= link_to edit_chat_message_path(chat_message), :class => "btn m-r-5" do %><i class="fa fa-pencil fa-fw"></i><% end %>
	        <%= link_to chat_message, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn m-r-5" do %><i class="fa fa-trash-o fa-fw"></i><% end %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Chat message', new_chat_message_path, :class => "btn" %>
</div>