<h4 class="page-title">Games</h4>
<div class="block-area" id="defaultStyle">
	<h3 class="block-title">Games index</h3>
<div class="table-responsive overflow" style="overflow: hidden; outline: none;">
	<table class="table table-bordered table-hover tile">
	  <thead>
	    <tr>
		      <th>Name</th>
		      <th>Sizex</th>
		      <th>Sizey</th>
		      <th>Status</th>
		      <th class="text-right col-md-2"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @games.each do |game| %>
	      <tr>
		        <td><%= game.name %></td>
		        <td><%= game.sizex %></td>
		        <td><%= game.sizey %></td>
		        <td><%= game.status %></td>
		        <td class="text-right col-md-2"><%= link_to game, :class => "btn m-r-5" do %><i class="fa fa-eye fa-fw"></i><% end %>
	        <%= link_to edit_game_path(game), :class => "btn m-r-5" do %><i class="fa fa-pencil fa-fw"></i><% end %>
	        <%= link_to game, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn m-r-5" do %><i class="fa fa-trash-o fa-fw"></i><% end %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Game', new_game_path, :class => "btn" %>
</div>